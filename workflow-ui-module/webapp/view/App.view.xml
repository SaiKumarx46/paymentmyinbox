                                                        <Text id="quantity1" text="Quantity"/>
                                                    </Column>
                                                    <Column>
                                                        <Text id="cgst_percentage1" text="CGST %" />
                                                    </Column>
                                                    <Column>
                                                        <Text id="sgst_percentage1" text="SGST %" />
                                                    </Column>
                                                    <Column>
                                                        <Text id="cgst_value1" text="CGST Value" />
                                                    </Column>
